<!DOCTYPE html>
<html>
  <head>
    <title>Chatterbox</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/chatroom.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/styles.css"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <style>
    body {
      overflow-x: hidden;
    }
    .navbar-brand {
      position: absolute;
      width: 100%;
      left: 0;
      text-align: center;
    }

    .navbar-default .navbar-brand {
      color: #337AB7;
    }

    #wrapper {
      text-align: center;
    }
    #messages {
      height: 600px;
      overflow-y: auto;
    }

    #usersOnline {
      height: 600px;
      overflow-y: auto;
    }

    #messages ul, #usersOnline ul {
      list-style: none;
      padding-left: 0;
    }

    #userInput {
      margin-top: 10px;
    }
    #messages-container {
      padding-right: 0px;
    }

    .panel-heading {
      text-align: center;
    }
  </style>
  <body>
      <!-- navbar -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand">
              Chatterbox
            </a>  
          </div>
        </div>
      </nav>

      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8" id="messages-container">
            <div class="panel panel-default">
              <div class="panel-heading">
                Messages
              </div>
              <div class="panel-body" id="messages">
                <ul></ul>
              </div>
            </div>
          </div>
          <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                Users Online
              </div>
              <div class="panel-body" id="usersOnline">
                <ul></ul>
              </div>
            </div>
          </div>
        </div>
        

    
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
              <span class="input-group-addon" id="user"></span>
              <input type="text" class="form-control" id="message">
              <span class="input-group-btn">
              <button class="btn btn-primary" onclick="sendMessage()" id="sendMessage">Send</button>
              </span>
            </div>
          </div>
        </div>
          
      </div>




